<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
      fx:controller="systems.singularity.buildware.gui.ConnectionPreferencesController">
    <HBox>
        <Label alignment="CENTER_RIGHT" prefWidth="96.0" text="Host">
            <HBox.margin>
                <Insets bottom="10.0" left="5.0" right="5.0" top="10.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="hostTextField" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </TextField>
    </HBox>
    <HBox>
        <Label alignment="CENTER_RIGHT" prefWidth="96.0" text="Port">
            <HBox.margin>
                <Insets bottom="10.0" left="5.0" right="5.0" top="10.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="portTextField" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </TextField>
    </HBox>
    <HBox>
        <Label alignment="CENTER_RIGHT" prefWidth="96.0" text="SID">
            <HBox.margin>
                <Insets bottom="10.0" left="5.0" right="5.0" top="10.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="sidTextField" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </TextField>
    </HBox>
    <HBox>
        <Label alignment="CENTER_RIGHT" prefWidth="96.0" text="User">
            <HBox.margin>
                <Insets bottom="10.0" left="5.0" right="5.0" top="10.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="userTextField" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </TextField>
    </HBox>
    <HBox>
        <Label alignment="CENTER_RIGHT" prefWidth="96.0" text="Password">
            <HBox.margin>
                <Insets bottom="10.0" left="5.0" right="5.0" top="10.0"/>
            </HBox.margin>
        </Label>
        <PasswordField fx:id="passwordPasswordField" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </PasswordField>
    </HBox>
    <HBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="commitButton" text="Commit Changes">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
